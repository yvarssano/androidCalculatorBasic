<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="#357183"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4A899D"
            android:gravity="center|right|bottom"
            android:padding="20dp"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#357183"
        android:backgroundTint="#225C6E"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="numClick"
            android:text="7"
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="numClick"
            android:text="8"
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="numClick"
            android:text="9"
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/btnMulti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="action"
            android:text="X"
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#357183"
        android:backgroundTint="#225C6E"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="numClick"
            android:text="4"
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="numClick"
            android:text="5"
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="numClick"
            android:text="6"
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="action"
            android:text="-"
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp"
            app:iconTint="#910707" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#357183"
        android:backgroundTint="#225C6E"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="numClick"
            android:text="1"
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="numClick"
            android:text="2"
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="numClick"
            android:text="3"
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="action"
            android:text="+"
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#357183"
        android:backgroundTint="#225C6E"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDevide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="action"
            android:text="/"
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="numClick"
            android:text="0"
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="numClick"
            android:text="."
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#151515"
            android:onClick="equals"
            android:text="="
            android:textColor="#73B8CD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:cornerRadius="100dp" />
    </LinearLayout>
</LinearLayout>